{
  "name": "root",
  "private": true,
  "license": "MIT",
  "description": "DVLA Emerging Tech Lab CDK Tools",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "audit": "npm run audit --workspaces",
    "build": "npm run build --workspaces",
    "outdatedRoot": "ncu --errorLevel 2 --color --packageFile ./package.json",
    "outdated": "npm run outdated --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "release": "lerna version --conventional-commits --yes",
    "publish": "lerna publish from-package --yes",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "jiraPrefix": "ET",
      "jiraAppend": ":",
      "defaultType": "feat"
    }
  },
  "devDependencies": {
    "@digitalroute/cz-conventional-changelog-for-jira": "8.0.1",
    "@eslint/js": "^9.13.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.17",
    "@types/node": "22.15.29",
    "@typescript-eslint/eslint-plugin": "8.33.0",
    "@typescript-eslint/parser": "8.33.0",
    "aws-cdk-lib": "2.199.0",
    "commitizen": "4.3.1",
    "constructs": "10.4.2",
    "conventional-changelog-conventionalcommits": "9.0.0",
    "esbuild": "0.25.5",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.12.0",
    "jest": "29.7.0",
    "lerna": "8.2.2",
    "npm-check-updates": "18.0.1",
    "prettier": "3.5.3",
    "ts-jest": "29.3.4",
    "tslib": "2.8.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  }
}
