{
  "name": "root",
  "private": true,
  "license": "MIT",
  "description": "DVLA Emerging Tech Lab CDK Tools",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "audit": "npm run audit --workspaces",
    "build": "npm run build --workspaces",
    "outdatedRoot": "ncu --errorLevel 2 --color --packageFile ./package.json",
    "outdated": "npm run outdated --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "release": "lerna version --conventional-commits --yes",
    "publish": "lerna publish from-package --yes",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "jiraPrefix": "ET",
      "jiraAppend": ":",
      "defaultType": "feat"
    }
  },
  "devDependencies": {
    "@digitalroute/cz-conventional-changelog-for-jira": "8.0.1",
    "@types/jest": "29.5.13",
    "@types/lodash": "4.17.9",
    "@types/node": "20.16.10",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "aws-cdk-lib": "2.160.0",
    "commitizen": "4.3.1",
    "constructs": "10.3.0",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "esbuild": "0.24.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-import": "2.30.0",
    "eslint-plugin-jest": "28.8.3",
    "jest": "29.7.0",
    "lerna": "8.1.8",
    "npm-check-updates": "16.14.20",
    "prettier": "3.3.3",
    "ts-jest": "29.2.5",
    "tslib": "2.7.0",
    "typescript": "5.6.2"
  }
}
