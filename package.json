{
  "name": "root",
  "private": true,
  "license": "MIT",
  "description": "DVLA Emerging Tech Lab CDK Tools",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "audit": "npm run audit --workspaces",
    "build": "npm run build --workspaces",
    "outdatedRoot": "ncu --errorLevel 2 --color --packageFile ./package.json",
    "outdated": "npm run outdated --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "release": "lerna version --conventional-commits --yes",
    "publish": "lerna publish from-package --yes",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "jiraPrefix": "ET",
      "jiraAppend": ":",
      "defaultType": "feat"
    }
  },
  "devDependencies": {
    "@aws-cdk/assert": "2.37.1",
    "@digitalroute/cz-conventional-changelog-for-jira": "7.3.0",
    "@types/jest": "28.1.7",
    "@types/lodash": "4.14.182",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "aws-cdk-lib": "2.37.1",
    "constructs": "10.1.77",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "commitizen": "4.2.5",
    "esbuild": "0.15.3",
    "eslint": "8.22.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.4.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.8.3",
    "jest": "28.1.3",
    "lerna": "5.4.2",
    "npm-check-updates": "16.0.5",
    "prettier": "2.7.1",
    "ts-jest": "28.0.8",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  }
}
