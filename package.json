{
  "name": "root",
  "private": true,
  "license": "MIT",
  "description": "DVLA Emerging Tech Lab CDK Tools",
  "scripts": {
    "audit": "lerna exec -- npm audit --registry=https://registry.npmjs.org --audit-level=moderate",
    "build": "lerna run build",
    "outdated": "lerna exec -- npm run outdated",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "typecheck": "lerna exec -- tsc --noEmit",
    "bootstrap-ci": "lerna bootstrap",
    "version": "lerna version --no-push",
    "publish": "lerna publish from-package --yes",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "jiraPrefix": "ET",
      "jiraAppend": ":",
      "defaultType": "feat"
    }
  },
  "devDependencies": {
    "@digitalroute/cz-conventional-changelog-for-jira": "^7.3.0",
    "@types/node": "^17.0.23",
    "commitizen": "^4.2.4",
    "lerna": "^4.0.0",
    "typescript": "^4.6.3"
  }
}
