{
  "name": "root",
  "private": true,
  "license": "MIT",
  "description": "DVLA Emerging Tech Lab CDK Tools",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "audit": "npm run audit --workspaces",
    "build": "npm run build --workspaces",
    "outdatedRoot": "ncu --errorLevel 2 --color --packageFile ./package.json",
    "outdated": "npm run outdated --workspaces",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "release": "lerna version --conventional-commits --yes",
    "publish": "lerna publish from-package --yes",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "jiraPrefix": "ET",
      "jiraAppend": ":",
      "defaultType": "feat"
    }
  },
  "devDependencies": {
    "@digitalroute/cz-conventional-changelog-for-jira": "8.0.1",
    "@types/jest": "29.5.2",
    "@types/lodash": "4.14.195",
    "@types/node": "20.3.2",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "aws-cdk-lib": "2.84.0",
    "commitizen": "4.3.0",
    "constructs": "10.2.64",
    "conventional-changelog-conventionalcommits": "6.1.0",
    "esbuild": "0.18.11",
    "eslint": "8.44.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.2",
    "jest": "29.5.0",
    "lerna": "7.1.1",
    "npm-check-updates": "16.10.13",
    "prettier": "2.8.8",
    "ts-jest": "29.1.1",
    "tslib": "2.6.0",
    "typescript": "5.1.6"
  }
}
